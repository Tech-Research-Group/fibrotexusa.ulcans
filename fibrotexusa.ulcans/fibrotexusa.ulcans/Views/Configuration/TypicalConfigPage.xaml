                        <Image Source="Howitzer105" WidthRequest="20" Grid.Column="0" Grid.Row="6"/>
                        <Label Text="Howitzer 105" Grid.Column="1" Grid.Row="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                        <Label Text="1" Grid.Column="2" Grid.Row="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                        <Label Text="2" Grid.Column="3" Grid.Row="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
