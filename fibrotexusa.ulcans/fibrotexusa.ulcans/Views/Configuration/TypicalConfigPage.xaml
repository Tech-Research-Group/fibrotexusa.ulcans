                        <!--Row 4-->
                        <Image Source="Bradley" WidthRequest="20" Grid.Column="0" Grid.Row="4"/>
                        <Label Text="Bradley" Grid.Column="1" Grid.Row="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
