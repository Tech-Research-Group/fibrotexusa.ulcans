                        <Image Source="Tent" WidthRequest="20" Grid.Column="0" Grid.Row="11"/>
                        <Label Text="Billeting Tent/GP Medium" Grid.Column="1" Grid.Row="11" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                        <Label Text="4" Grid.Column="2" Grid.Row="11" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                        <Label Text="4" Grid.Column="3" Grid.Row="11" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                        <Image Source="i4" WidthRequest="20" Grid.Column="4" Grid.Row="11"/>
                        <Label Text="4" Grid.Column="5" Grid.Row="11" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
                    </Grid>
                </Grid>

                <StackLayout Orientation="Horizontal" BackgroundColor="Transparent" HeightRequest="45"
                             VerticalOptions="EndAndExpand">
                    <ImageButton Source="Button_Home_240x240" HeightRequest="40" HorizontalOptions="StartAndExpand"
                                 Margin="0, 5" Clicked="OnBackBtnClicked"/>

                    <Label Text="" VerticalOptions="Center" />

                    <ImageButton Source="Button_Calculator_120x120"
                            HeightRequest="40"
                            HorizontalOptions="EndAndExpand"
                            Margin="0, 5"
                            Clicked="OnNextBtnClicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
